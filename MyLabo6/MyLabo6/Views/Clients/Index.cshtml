@model IEnumerable<GGPCSNETLabo6.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2>List</h2>

<p>
    <a asp-action="Create" >Create New customer </a>
    <a asp-action="Contrat">Create New contrat </a>
    <a asp-action="voyage">Create New voyage </a>
</p>
<table class="table  table-bordered ">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CliPrenom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliNom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cliDateNaiss)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliRue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliVille)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CliTelephone)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CliPrenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CliNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cliDateNaiss)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CliRue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CliVille)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CliTelephone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClientID">Details</a> |
                <a asp-action="Supprimer" asp-route-id="@item.ClientID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
